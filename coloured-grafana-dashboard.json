{
  "id": null,
  "title": "Taskforge System Overview",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "title": "Task Success vs Failures",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum by (status) (rate(task_processed_total[5m]))",
          "legendFormat": "{{status}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "percentage",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 2 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      }
    },
    {
      "title": "Retry Attempts",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum by (type) (rate(task_retry_attempts_total[5m]))",
          "legendFormat": "{{type}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 200 }
            ]
          }
        }
      }
    },
    {
      "title": "Dropped Tasks (DLQ)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(task_dropped_total[5m])",
          "legendFormat": "DLQ"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      }
    },
    {
      "title": "Task Processing Duration (p95)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(task_processing_duration_seconds_bucket[5m])) by (le, type))",
          "legendFormat": "{{type}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 2 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      }
    },
    {
      "title": "FFmpeg Failures",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum by (codec, format) (rate(ffmpeg_failures_total[5m]))",
          "legendFormat": "{{codec}}-{{format}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 2 },
              { "color": "red", "value": 10 }
            ]
          }
        }
      }
    },
    {
      "title": "S3 Upload Failures",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum by (type) (rate(s3_upload_failures_total[5m]))",
          "legendFormat": "{{type}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      }
    },
    {
      "title": "Gateway Connections",
      "type": "timeseries",
      "targets": [
        {
          "expr": "connected_clients_gauge",
          "legendFormat": "clients"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          }
        }
      }
    }
  ]
}
